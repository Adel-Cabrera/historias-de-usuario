<p id="notice"><%= notice %></p>

<h1>Products</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Enable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.enable %></td>

        <% if user_signed_in? && current_user.id == product.user_id%>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% elsif user_signed_in? && current_user.id != product.user_id %>

          <td><%= link_to 'Comprar', sell_path(product)%></td>

        <% else %>
          <td><%= link_to 'Comprar', new_user_session_path %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br>
<% if user_signed_in? %>
<%= link_to 'New Product', new_product_path %>
  <%= link_to 'Mi perfil de vendedor', users_myproducts_path %>
  <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
<% end %>
